# Build stage
FROM golang:1.25-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY main.go ./

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o reader-mcp .

# Runtime stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder
COPY --from=builder /app/reader-mcp .

# Set the default reader endpoint and port (can be overridden by env var)
ENV READER_ENDPOINT=http://reader-container:3000
ENV PORT=8080

# Expose the HTTP port
EXPOSE 8080

# Run the application (HTTP SSE transport)
ENTRYPOINT ["./reader-mcp"]
